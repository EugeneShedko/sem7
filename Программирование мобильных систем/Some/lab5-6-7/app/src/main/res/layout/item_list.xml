<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dayOfWeeekIdlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="dayOfWeeek"
            android:textSize="20dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="numWeeek"
            android:textSize="20dp"
            android:id="@+id/listnumWeek"/>
    </LinearLayout>
            <TextView
                android:id="@+id/timeIdlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="time"
                android:textSize="20dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="nameLessonlist"
            android:textSize="20dp"
            android:id="@+id/nameLessonlist"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/auditoryIdlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20dp" />

            <TextView
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="korpus"
                android:textSize="20dp"
                android:id="@+id/korpusIdlist"/>
        </LinearLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="teacher"
            android:textSize="20dp"
            android:id="@+id/teacherIdlist"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>