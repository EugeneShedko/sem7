<Window x:Class="Lab1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <Grid Margin="0,0,-6.2,0">
        <Label Content="Введите первое число" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="174"/>
        <Label Content="Введите второе число" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="174"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="14,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="FirstValue"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="14,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="SecondValue"/>
        <Button Content="Сложить" HorizontalAlignment="Left" Margin="14,130,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Результат" HorizontalAlignment="Left" Margin="14,161,0,0" VerticalAlignment="Top" Width="174"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="14,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="Result"/>

    </Grid>
</Window>
